import "letter.ral"

TxContract PostOffice(cContractIdForLetter: ByteVec) {
  pub fn send(message: ByteVec, to: Address) -> () {
    approveAlph!(txCaller!(0), 1000000000000000000)
    copyCreateContract!(
      cContractIdForLetter,
      encodeToByteVec!(message, to, callerAddress!())
    )
  }
}
